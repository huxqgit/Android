<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/btn_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ViewPager实现 Tags"
        android:onClick="onClick (MainActivity)" />


    <Button
        android:id="@+id/btn_fraemgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="fraemgent实现 Tags"
        android:onClick="onClick (MainActivity)" />

    <Button
        android:id="@+id/btn_fraemgent_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="fraemgent+viewpager实现 Tags"
        android:onClick="onClick (MainActivity)" />

</LinearLayout>
